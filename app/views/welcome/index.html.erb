<%@products= Product.all%>
<% @products.in_groups_of(4) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-2">
        <div class="panel panel-default">
          <div class="panel-body text-center product-body">
            <%=link_to( image_tag(idea.product_image_url, :width => 100, :height => 100), admin_product_path(idea), :class=>"work") %> 
            <h4><%= link_to idea.name, admin_product_path(idea) %></h4>
      
          </div>
          <div class="panel-footer text-center">
            <span itemprop="offers" itemscope itemtype="https://schema.org/Offer">
              <span class="price selling lead" itemprop="price">
                <%=idea.master_price%>  
              </span>
            </span>
          </div>
        </div> 
      </div>
    <% end %>
  </div>
  <br>
<% end %>  





        
