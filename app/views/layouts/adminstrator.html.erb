<style>
  .dropdown-menu {
    width: 200px ;
}
/* make sidebar nav vertical */ 
@media (min-width: 768px) {
  .sidebar-nav .navbar .navbar-collapse {
    padding: 0;
    max-height: none;
  }
  .sidebar-nav .navbar ul {
    float: none;
  }
  .sidebar-nav .navbar ul:not {
    display: block;
  }
  .sidebar-nav .navbar li {
    float: none;
    display: block;
  }
  .sidebar-nav .navbar li a {
    padding-top: 12px;
    padding-bottom: 12px;
  }
  .navbar {
  background-color: #d5e73c;
  
}
.nav .nav-sidebar{
  background-color: #d5e73c;
  
}

}

  </style>

<head>  
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>  
<body>
  <nav class="navbar ">
  <div class="container-fluid">
    <div class="navbar-header">
          <a class="navbar-brand" href="#">ADMINSTRATOR</a>
    </div>
   
      
      <ul class="nav navbar-nav navbar-right">
        

              <li class="dropdown user user-menu">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <i class="glyphicon glyphicon-user"></i>
                  <span><%=current_user.email%> <i class="caret"></i></span>
                </a>
                <ul class="dropdown-menu">
                 
                  <li class="user-body">
                    <div class="col-md-12 text-center" data-hook="store-frontend-link">
                      <a target="_blank" href="/">Go Back To Store</a>
                    </div>
                  </li>
                  <li class="user-footer" id="login-nav">
                    <div class="pull-left " data-hook="user-account-link">
                       <%=link_to "Account" , edit_user_registration_path,class: "btn btn-default btn-flat"%>   
                    </div>
                    <div  data-hook="user-logout-link">
                      <%= link_to "Logout", destroy_user_session_path, method: :delete,class: "btn btn-default btn-flat"%>
                    </div>
                  </li>
               
                </ul>
              </li>
          

      </ul>
   
  </div>
</nav>


<div class="container-fluid">
      <div class="row">
        <div class = "col-md-2"> 
        
          <ul class="nav nav-sidebar ">
            <li class="sidebar-menu-item"><a data-toggle="collapse" data-parent="#sidebar" href="#sidebar-user">
