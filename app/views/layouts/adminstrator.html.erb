          </ul>
        
      </div>
    
        <div class = "col-md-10">
           <%= yield %>
        </div>
      </div>
    </div>

    <script>
$(document).ready(function(){
    $(".btn-primary").click(function(){
        $(".collapse").collapse('toggle');
    });
    
});
</script>

</body> 

    