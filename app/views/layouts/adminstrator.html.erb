              <span class="glyphicon glyphicon-user"></span>
              <span class="text">Users</span><span class="caret"></span></a><ul id="sidebar-user" class="collapse nav nav-pills nav-stacked" >
               
              <li class="sidebar-menu-item" > 
                <%=link_to "List of users" , admin_users_path%> 
              </li>
              <li class="sidebar-menu-item">
                <%=link_to "New user" , new_admin_user_path%> 
              </li> 
            </li>
          </ul>

          <ul class="nav nav-sidebar">
            <li class="sidebar-menu-item"><a data-toggle="collapse" data-parent="#sidebar" href="#sidebar-role">
