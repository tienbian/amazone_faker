

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Slug</th>
      <th>Master price</th>
      <th>Cost price</th>
      <th>Cost currency</th>
      <th>Available on</th>
      <th>Sku</th>
      <th>Category</th>
      <th>Product image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.slug %></td>
        <td><%= product.master_price %></td>
        <td><%= product.cost_price %></td>
        <td><%= product.cost_currency %></td>
        <td><%= product.available_on %></td>
        <td><%= product.sku %></td>
        <td><%= product.category_id %></td>
        <td><%= product.product_image %></td>
        <td><%= link_to 'Show', admin_product_path(product) %></td>
        <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
        <td><%= link_to 'Destroy', admin_product_path(product) , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

